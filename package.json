{
  "name": "mindstack",
  "displayName": "MindStack",
  "description": "Collect code trace points and visualize them in a sidebar storyboard",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "mindstack.collectTrace",
        "title": "MindStack: Collect Trace"
      },
      {
        "command": "mindstack.exportMarkdown",
        "title": "MindStack: Export to Markdown"
      },
      {
        "command": "mindstack.clearAll",
        "title": "MindStack: Clear All Traces"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "mindstack-sidebar",
          "title": "MindStack",
          "icon": "$(bookmark)"
        }
      ]
    },
    "views": {
      "mindstack-sidebar": [
        {
          "type": "webview",
          "id": "mindstack.storyboard",
          "name": "Storyboard"
        }
      ]
    }
  },
  "scripts": {
    "build": "node esbuild.js",
    "watch": "node esbuild.js --watch",
    "lint": "eslint src --ext ts,tsx"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@types/vscode": "^1.85.0",
    "esbuild": "^0.20.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.1.0",
    "@dnd-kit/sortable": "^8.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-syntax-highlighter": "^15.5.0",
    "@types/react-syntax-highlighter": "^15.5.11"
  }
}
